---
type Tagged = {
  href: string
  name: string
}

type Props = {
  tagged: Array<Tagged>
}

const { tagged } = Astro.props
---

<ul class="tags" role="list">
  {tagged.map(({ href, name }: Tagged) => (
    <li role="listitem"><a {href}><i>#</i>{name}</a></li>
  ))}
</ul>

<style>
  .tags {
    display: flex;
    gap: 16px;
    justify-content: center;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .tags li > a {
    background-color: var(--primary);
    border-radius: 24px;
    color: var(--text-on-primary);
    display: block;
    font-weight: 600;
    padding: 4px 12px;
    text-decoration: none;
  }

  .tags li > a:focus-visible {
    outline: .15em solid var(--primary);
    outline-offset: .25em;
  }

  .tags li > a > i {
    font-weight: 300;
  }
</style>
